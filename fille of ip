  <script>
    document.getElementById("admissionForm").addEventListener("submit", function (e) {
      e.preventDefault();

      const form = e.target;
      const obtained = parseFloat(form.obtainedMarks.value);
      const max = parseFloat(form.maxMarks.value);

      if (!isNaN(obtained) && !isNaN(max) && max > 0) {
        const percentage = ((obtained / max) * 100).toFixed(2);
        form.percentage.value = percentage + "%";
        alert("Form submitted successfully with percentage: " + percentage + "%");
      } else {
        alert("Please enter valid marks to calculate percentage.");
      }
    });
  </script>
